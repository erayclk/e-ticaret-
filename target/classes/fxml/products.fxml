<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ecommerce.controller.ProductController"
      spacing="10" style="-fx-padding: 20;">
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Text style="-fx-font-size: 24px;" text="Ürünler"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Ürün Ara..." prefWidth="200"/>
    </HBox>
    
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <GridPane fx:id="productsGrid" hgap="20" vgap="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
    </ScrollPane>
</VBox> 