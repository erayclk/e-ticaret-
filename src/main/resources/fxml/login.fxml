<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.ecommerce.controller.LoginController">
    
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="E-Commerce Login"/>
    
    <VBox spacing="10" maxWidth="300">
        <TextField fx:id="usernameField" promptText="Username" style="-fx-padding: 10;"/>
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-padding: 10;"/>
        
        <HBox spacing="10">
            <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button text="Register" onAction="#handleRegister" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 20;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>
    </VBox>
    
    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox> 